<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <net.tsz.afinal.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_tv="店铺详情"
        app:left_iv="@mipmap/back" />

    <ImageView
        android:id="@+id/shop_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/shop_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺名称：" />

    <TextView
        android:id="@+id/shop_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺地址：" />

    <TextView
        android:id="@+id/comm_person_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="负责人姓名：" />

    <TextView
        android:id="@+id/open_time1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启时间1" />

    <TextView
        android:id="@+id/open_time2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启时间2" />

    <TextView
        android:id="@+id/send_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="配送时间" />

    <TextView
        android:id="@+id/email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱" />

    <TextView
        android:id="@+id/tel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系电话" />
</LinearLayout>