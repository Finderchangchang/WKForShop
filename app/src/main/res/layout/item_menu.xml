<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:descendantFocusability="beforeDescendants"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cai_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <EditText
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:hint="菜品名称" />

        <TextView
            android:id="@+id/menu_type_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/name_tv"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/price_ll"
            android:layout_toRightOf="@+id/price_ll"
            android:gravity="center_vertical"
            android:hint="选择分类"
            android:inputType="number"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/price_ll"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/name_tv"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/price_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="价格" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="18sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/sort_id_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/price_ll"
            android:layout_alignBottom="@+id/price_ll"
            android:layout_alignLeft="@+id/price_ll"
            android:layout_alignStart="@+id/menu_type_tv"
            android:hint="排序编码"
            android:inputType="number" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/add_btn"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:background="@color/colorPrimary"
            android:text="保存"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="删除"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>