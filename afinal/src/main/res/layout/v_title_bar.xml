<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <RelativeLayout
        android:id="@+id/left_rl"
        android:layout_width="55dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/left_iv"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:paddingLeft="17dp"
            android:paddingRight="17dp" />

        <TextView
            android:id="@+id/left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关闭"
            android:textColor="#00D8E2"
            android:textSize="16sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/center_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/center_iv"
            android:layout_width="5dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:padding="5dp" />

        <TextView
            android:id="@+id/center_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_line_ll"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#D7D7D7"
        android:orientation="vertical" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:collapseIcon="@color/black"
        app:navigationIcon="@color/tm_color" />

    <RelativeLayout
        android:id="@+id/right_rl"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/right_iv"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:paddingLeft="17dp"
            android:paddingRight="17dp" />

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#00D8E2"
            android:textSize="16sp" />

        <Button
            android:id="@+id/right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/kg_sw"
            android:padding="2dp"
            android:visibility="visible" />
    </RelativeLayout>
    <!--?attr/homeAsUpIndicator-->
</RelativeLayout>